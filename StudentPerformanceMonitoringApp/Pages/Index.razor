@page "/"

<PageTitle>Student Performance Monitoring</PageTitle>

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0">
            <h1>Welcome to Student Performance Tracker</h1>
            <p>Use this tool to monitor study sessions across different subjects and predict grades based on study patterns</p>
            <p>Get insights into study hours spent on key subjects like Data Structures and Algorithms, Enterprise Application Development, Cloud Computing, and iOS Development</p>
        </div>
        <div class="col-md-6">
            <img src="/Images/student.png" class="img-fluid rounded" alt="Student Image">
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <div class="d-grid gap-3">
                <a class="btn btn-primary btn-lg btn-block" href="/studysessions">View Study Sessions</a>
                <a class="btn btn-secondary btn-lg btn-block" href="/breaks">View Breaks</a>
                <a class="btn btn-primary btn-lg btn-block" href="/predictions">View Grade Predictions</a>
                <a class="btn btn-secondary btn-lg btn-block" href="/reports">View Weekly Reports</a>
            </div>
        </div>
    </div>
</div>

